<Window x:Class="Supermarket.CustomerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Customer" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Name:" />
            <TextBox x:Name="NameTextBox" Margin="0,0,0,5" Text="{Binding Name}" />

            <Label Content="Phone:" />
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,5" Text="{Binding Phone}" />

            <Label Content="Email:" />
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,5" Text="{Binding Email}" />

            <Label Content="Address:" />
            <TextBox x:Name="AddressTextBox" Margin="0,0,0,5" Text="{Binding Address}" />

            <Label Content="Loyalty Points:" />
            <TextBox x:Name="LoyaltyPointsTextBox" Margin="0,0,0,5" Text="{Binding LoyaltyPoints}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Save" Padding="10,5" Margin="0,0,10,0" Click="SaveButton_Click" />
                <Button Content="Cancel" Padding="10,5" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>