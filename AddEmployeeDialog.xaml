<!-- AddEmployeeDialog.xaml -->
<Window x:Class="Supermarket.AddEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Employee" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Label Content="Name:"/>
        <TextBox x:Name="NameTextBox"/>

        <Label Content="Role:"/>
        <TextBox x:Name="RoleTextBox"/>

        <Label Content="Hire Date:"/>
        <DatePicker x:Name="HireDatePicker"/>

        <Label Content="Salary:"/>
        <TextBox x:Name="SalaryTextBox"/>

        <Label Content="Username:"/>
        <TextBox x:Name="UsernameTextBox"/>

        <Label Content="Password:"/>
        <PasswordBox x:Name="PasswordBox"/>

        <StackPanel Orientation="Horizontal" Margin="0,10">
            <Button Content="OK" Width="80" Margin="5" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>